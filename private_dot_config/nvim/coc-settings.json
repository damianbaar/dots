{
  "codeLens.enable": true,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚠",
  "diagnostic.hintSign": "➤",
  "diagnostic.infoSign": "ℹ",
  "diagnostic-languageserver.enable": true,
  "diagnostic-languageserver.mergeConfig": true,
  "list.insertMappings": {
    "<C-x>": "action:split",
    "<C-v>": "action:vsplit"
  },
  "diagnostic-languageserver.filetypes": {
    "python": [
      "mypy"
    ]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": [
      "autopep8"
    ]
  },
  "list.normalMappings": {
    "s": "action:split",
    "v": "action:vsplit"
  },
  "list.source.files.command": "rg",
  "list.source.files.args": [
    "--type",
    "f"
  ],
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "json",
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "git.enableGutters": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pytypeEnabled": false,
  "python.linting.mypyEnabled": true,
  "coc.preferences.rootPatterns": [
    ".git"
  ],
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source":"vim-devicons",
  "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  "explorer.width": 30,
  "snippets.userSnippetsDirectory": "~/.config/nvim/ultisnips",
  "suggest.snippetIndicator": " ►",
  "diagnostic.enable": true,
  "coc.preferences.hoverTarget": ["float", "echo"],
  "html.format.enable": true,
  "snippets.extends": {
    "javascriptreact": [
      "javascript"
    ],
    "typescript": [
      "javascript"
    ]
  },
  "suggest.echodocSupport": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.signOffset": 9999999,
  "diagnostic.format": "%message",
   "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
  }
}
